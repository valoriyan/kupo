{
  "name": "kupono-backend",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "clear": "echo '\n\n\n\n\n\n\n\n\n\n'",
    "resetDatabase": "tsc && node build/src/scripts/teardown.js && sleep 3 && node build/src/scripts/setup.js",
    "setupFakeLocalData": "tsc && yarn run resetDatabase && node build/src/scripts/setupFakeLocalData.js",
    "dev": "yarn run killRunningDev && sleep 4 && concurrently \"nodemon\" \"nodemon -x tsoa spec-and-routes\"",
    "deploy": "git add -A; git commit -m 'deploy'; git push heroku main",
    "killRunningDev": "lsof -i:4000 -Fp | head -n 1 | sed 's/^p//' | xargs kill",
    "build": "yarn run clear && tsoa spec-and-routes && tsc",
    "start": "node build/src/server.js",
    "test": "jest --forceExit --coverage --verbose --runInBand",
    "lint": "eslint 'src/**/*.{js,ts}' --cache --fix",
    "prettier:check": "prettier --check 'src/**/*.{js,ts}'",
    "prettier:fix": "prettier --write 'src/**/*.{js,ts}'",
    "prepare": "husky install"
  },
  "dependencies": {
    "bluebird": "^3.7.2",
    "cookie-parser": "^1.4.5",
    "cors": "^2.8.5",
    "crypto-js": "^4.1.1",
    "dotenv": "^10.0.0",
    "express": "^4.17.1",
    "jsonwebtoken": "^8.5.1",
    "luxon": "^2.0.2",
    "multer": "^1.4.3",
    "pg": "^8.6.0",
    "reflect-metadata": "^0.1.13",
    "socket.io": "^4.3.2",
    "swagger-ui-express": "^4.1.6",
    "tsoa": "^3.8.0",
    "tsyringe": "^4.6.0",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "@types/bluebird": "^3.5.36",
    "@types/concurrently": "^6.2.1",
    "@types/cookie-parser": "^1.4.2",
    "@types/cors": "^2.8.12",
    "@types/crypto-js": "^4.0.2",
    "@types/eslint": "^7.28.0",
    "@types/express": "^4.17.13",
    "@types/jest": "^26.0.24",
    "@types/jsonwebtoken": "^8.5.4",
    "@types/luxon": "2.0.5",
    "@types/multer": "^1.4.7",
    "@types/node": "^16.4.1",
    "@types/pg": "^8.6.1",
    "@types/supertest": "^2.0.11",
    "@types/swagger-ui-express": "^4.1.3",
    "@types/uuid": "^8.3.1",
    "@typescript-eslint/eslint-plugin": "^4.28.4",
    "@typescript-eslint/parser": "^4.28.4",
    "concurrently": "^6.2.0",
    "eslint": "^7.31.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-jest": "^24.4.0",
    "eslint-plugin-prettier": "^3.4.0",
    "husky": "^7.0.1",
    "jest": "^27.0.6",
    "lint-staged": "^11.1.1",
    "nodemon": "^2.0.12",
    "prettier": "^2.3.2",
    "supertest": "^6.1.4",
    "ts-jest": "^27.0.4",
    "ts-node": "^10.1.0",
    "typescript": "^4.3.5",
    "bufferutil": "^4.0.5",
    "utf-8-validate": "^5.0.7"
  },
  "lint-staged": {
    "*.{js,ts}": "eslint --cache --fix",
    "*.{js,ts,css,md}": "prettier --write"
  }
}
