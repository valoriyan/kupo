{
  "name": "kupo-frontend",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "devWithTestApi": "API_BASE_URL='https://test-api.kupono.io/' next dev",
    "test": "start-server-and-test devWithTestApi http://localhost:3000 'cypress run'",
    "build": "next build",
    "start": "next start",
    "deploy": "heroku git:remote -a kupono-beta-frontend; git add -A; git commit -m 'deploy'; git push heroku main --force",
    "generate:api": "TS_NODE_COMPILER_OPTIONS='{\"module\":\"commonjs\"}' ts-node --script-mode --files ./codegen/generateApiClient.ts",
    "generate:icons": "TS_NODE_COMPILER_OPTIONS='{\"module\":\"commonjs\"}' ts-node --script-mode --files ./codegen/generateIcons.ts",
    "lint": "eslint 'src/**/*.{js,jsx,ts,tsx}' --cache --fix",
    "type-check": "tsc",
    "prettier:check": "prettier --check 'src/**/*.{js,jsx,ts,tsx}'",
    "prettier:fix": "prettier --write -l 'src/**/*.{js,jsx,ts,tsx}'",
    "storybook": "start-storybook -p 6006 -s public",
    "build-storybook": "build-storybook -s public",
    "prepare": "husky install",
    "cypress:open": "cypress open"
  },
  "dependencies": {
    "@radix-ui/react-dialog": "^0.1.5",
    "@radix-ui/react-dropdown-menu": "^0.1.1",
    "@radix-ui/react-id": "^0.1.0",
    "@radix-ui/react-popover": "^0.1.1",
    "@radix-ui/react-scroll-area": "^0.1.4",
    "@radix-ui/react-tabs": "^0.0.16",
    "@stitches/react": "^1.2.8",
    "axios": "^0.21.1",
    "framer-motion": "^4.1.17",
    "jsonwebtoken": "^8.5.1",
    "luxon": "^2.1.1",
    "next": "12.0.7",
    "react": "17.0.2",
    "react-dom": "17.0.2",
    "react-fast-compare": "^3.2.0",
    "react-merge-refs": "^1.1.0",
    "react-query": "^3.21.1",
    "react-toastify": "^7.0.4",
    "react-virtualized": "^9.22.3",
    "socket.io-client": "^4.4.0",
    "zustand": "^3.5.10"
  },
  "devDependencies": {
    "@babel/core": "^7.14.6",
    "@openapitools/openapi-generator-cli": "^2.3.9",
    "@storybook/addon-actions": "^6.4.9",
    "@storybook/addon-essentials": "^6.4.9",
    "@storybook/addon-links": "^6.4.9",
    "@storybook/react": "^6.4.9",
    "@svgr/core": "^6.3.1",
    "@testing-library/cypress": "^8.0.3",
    "@types/axios": "^0.14.0",
    "@types/jsonwebtoken": "^8.5.4",
    "@types/luxon": "^2.0.7",
    "@types/react": "17.0.14",
    "@types/react-virtualized": "^9.21.21",
    "@typescript-eslint/eslint-plugin": "^5.8.1",
    "@typescript-eslint/parser": "^5.8.1",
    "babel-loader": "^8.2.2",
    "cypress": "10.5.0",
    "dotenv": "^10.0.0",
    "eslint": "8.6.0",
    "eslint-config-next": "12.0.7",
    "eslint-config-prettier": "^8.3.0",
    "husky": "^7.0.1",
    "lint-staged": "^11.1.1",
    "prettier": "^2.5.1",
    "start-server-and-test": "^1.14.0",
    "ts-node": "^10.4.0",
    "tsconfig-paths-webpack-plugin": "^3.5.2",
    "typescript": "4.5.4"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": "eslint --cache --fix",
    "*.{js,jsx,ts,tsx,css,md}": "prettier --write"
  }
}
